@main-color:#ff841d; 
* {
    margin: 0px;
    padding: 0px;
    /* 在移动端不允许出现横向滚动条的不能让padding或者border撑大盒子 */
    box-sizing: border-box;
    /*  清除移动端点击（按住）高亮颜色 */
    -webkit-tap-highlight-color: transparent;
}

a {
    text-decoration: none;
    color: #666;
}

li {
    list-style: none;
}

i,
em {
    font-style: normal;
}

input {
    /* 内边框  点击输出框出来的边框*/
    outline: 0;
    /* 外边框 */
    border: 0;
}

img {
    /* 设置图片对齐方式和文字一样解决图片3px的间隙的问题 */
    vertical-align: middle;
}

h1,
h2,
h3,
h4,
h5 {
    font-weight: normal;
}
.clearfix::after {
    content: "";
    display: block;
    clear: both;
}
body {
    background-color: #fff;
}
html ,body {
    height: 100%;
}
#header {
    z-index: 999;
    background-color: @main-color;
    position: fixed;
    width: 100%;
    left: 0;
    top: 0;
    height: 50px;
    >a {
        display: block;
        padding: 10px;
        .header-logo {
            height: 30px;
        }
        .header-app {
            position: absolute;
            right: 10px;
            top: 8px;
            width: 35px;
            height: 35px;    
        }
    }

}
#main {
    height: 100%;
    padding-top: 50px;
    padding-bottom: 50px;
    #minirefresh{
        > div {
            top: 50px;
        }
        .minirefresh-scroll{
            position: relative;
            .minirefresh-upwrap {
                position: relative;
                bottom: 22px;
                p {
                    font-size: 16px;
                }
            }
            form {
                background-color: #fff;
                height: 51px;
                padding: 10px;
                position: relative;
                .search {
                    background-color: #eee;
                    width: 100%;
                    height: 30px;
                    border-radius: 15px;
                    padding-left: 15px;
                }
                .btn-search {
                    width: 65px;
                    height: 30px;
                    border-radius: 15px;
                    background-color: @main-color; 
                    color: #fff;           
                    text-align: center;
                    font-size: 18px;
                    line-height: 30px;
                    position: absolute;
                    right: 10px;
                    top: 10px;
                }
            }
            .product {
                .product-nav {
                    padding: 10px;
                    background-color: #ddd;
                    border-bottom: 1px solid #ccc;    
                    border-top: 1px solid #ccc;    
                    > a {
                        padding: 10px 5px;
                        text-align: center;
                        text-decoration: none;
                        color: #666;
                        &.active {
                            color: #f40;
                        }
                    }
                        
                }
                .product-list {
                    border-bottom: 1px solid #ccc;
                    .media {
                        padding: 15px;
                        .media-pic { 
                            position: relative;                          
                            .large-img {
                                img {
                                    display: block;
                                    margin: 0 auto;
                                }
                            } 
                            .small-img {
                                position: absolute;
                                right: 10px;
                                top: 10px;
                                width: 40px;
                            }  
                        }
                        .media-body {
                            padding-right: 10px;
                            h4 {
                                font-size: 18px;
                                line-height: 30px;
                                display: -webkit-box;
                                -webkit-box-orient: vertical;
                                -webkit-line-clamp: 2;
                                overflow: hidden;
                            }
                            .other {
                                .price {
                                    i {
                                        margin-left: 5px;
                                        font-size: 16px;
                                        color: #f40;
                                    }
                                }
                                .comment {
                                    margin-right: 15px;
                                }
                            }
                        }
                    }
                }
            }
            .container {
                .row {
                    background-color: @main-color;
                    border-top: 1px solid gold;
                    border-bottom: 1px solid gold;
                    > div {
                        border-right: 1px solid rgb(219, 255, 17);
                        padding: 10px;
                        text-align: center;
                        font-style: 18px;
                        color: #fff;
                    }
                }
            }
            .rate-price {
                ul {
                    margin-bottom: 0;                    
                    a {
                       display: block;
                       border-bottom: 1px solid #ccc;
                       .media {
                           .media-left {
                               padding: 10px 5px;
                               img {
                                   display: block;
                                   margin: 0 auto;
                               }
                               span {
                                   display: block;
                                   width: 30px;
                               }
                           }
                           .media-body {
                               padding: 10px 5px;
                               line-height: 30px;
                               .price {
                                   margin-right: 10px;
                                   color: #f40;
                                   font-size: 18px;
                               }
                               i {
                                   margin-top: 10px;
                                   color: #666;
                               }
                           }
                       }
                   }
                }
            }
            .comment-list {
                h4 {
                    text-align: center;
                    padding: 10px;
                    margin: 0;
                    border-bottom: 1px solid #ccc;
                }
                .comment-detail {
                    .media-list {
                        .media {
                            border-bottom: 1px solid #ccc;
                            padding: 10px;
                            .media-left {
                                .star {
                                    font-size: 16px;
                                    width: 100px;
                                    color: @main-color;    
                                }
                            }
                            .media-body {

                            }
                            .comment {
                                margin-top: 5px;
                            }
                            .response {
                                display: block;
                                padding: 5px;
                                text-decoration: none;
                                color: #aaa;
                            }
                        }
                    }
                }
            }
        }
    }
    
}
#footer {
    position: fixed;
    z-index: 999;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50px;
    border-top: 1px solid #ccc;
    background-color: #f2f2f2;
    .container {
        .row {
            > div {
                padding: 0;
                > a {
                    display: block;
                    padding: 10px 0;
                    font-size: 16px;
                    line-height: 30px;
                    text-align: center;
                    text-decoration: none;
                    color: #666;
                    & + {
                        border-left: 1px solid #ccc;
                    }
                    &::before {
                        margin-right: 5px;
                    }
                }
            }
        }
    }
}