@import "base.less";
@main-color:#f18622;

* {
    margin: 0px;
    padding: 0px;
    /* 在移动端不允许出现横向滚动条的不能让padding或者border撑大盒子 */
    box-sizing: border-box;
    /*  清除移动端点击（按住）高亮颜色 */
    -webkit-tap-highlight-color: transparent;
}
html,body{
    width: 100%;
}

a{
    text-decoration: none;
    color:#666;
}
i{
    font-style: normal;
}
.clearfix:after{
    content: "";
    display: block;
    clear: both;
    height: 0;
}
.clearfix{
    zoom: 1;
}
.bb{
    border-bottom: 1px solid #ccc;
}

// 头部样式
    #header{
        color: #fff;
        .arrow-left{
            color: #fff;
            font-size: 20px;
            margin-top: 5px;
        }
        > p{
            text-align: center;
            font-size: 20px;
            margin: 0;
            margin-top: -30px
        }
        height: 50px;
        .onload-app-right{
            position: absolute;
            display: block;
            right: 10px;
            top: 8px;
        }
    }

// 产品展示样式
    #main{
        padding: 10px;
        > h4{
            > strong{

            }
        }
        > p {
            margin: 0;
            >span{
                font-size: 10px;
                color: #666;

                &.author{
                    color: @main-color;
                }
            }
        }
        .content{
            margin-top: 10px;
            width: 100%;
            img{
                height: 120px;
                float: right;
            }
        }
        .largeImage{
            width: 100%;
        }
        .product-city{
            margin-top: 10px;
            #disstorck{
                // border: 1px solid #666;
                padding-left: 100px;
                > li{
                    list-style: none;
                    > a{
                        border: 1px solid #aaa;
                        margin-top: -1px;
                        width: 100px;
                        display: block;
                        >span{
                            width: 100%;
                            >strong{
                                float: right;
                                color: @main-color;
                            }
                        }
                    }
                }
            } 
        }
        #buyProduct{
            margin-top: 5px;
            padding: 5px 20px 5px 20px;
            button{
                width: 100%;
                height: 30px;
                background-color: @main-color;
                color: white;
                font-size: 20px;
                text-align: center;
                line-height: 30px;
                border: none;
                border-radius: 5px;
            }
        }
        #qrCode{
            width: 100%;
            margin-top: 5px;
        }
        .comments{
            width: 100%;
            padding: 0 5px;
            margin-top: 5px;
            .cu-content-pl{
                width: 100%;
                .tit{
                    font-size: 20px;
                    padding: 5px;
                }
                .reply{
                    width: 100%;
                   .form{
                       width: 100%;
                       >textarea{
                            resize:none;
                            width: 100%;
                            height: 120px;
                    
                       }
                       .ctrl{
                           >input{
                            height: 50px;
                            width: 100px;
                            font-size: 20px;
                            color: white;
                            position: relative;
                            background-color: @main-color;
                            border: 0;
                            bottom: 55px;
                            right: -190px;
                           }
                       }
                   }
                }
                #newcomment{
                    margin-top: -45px;
                }
                .list{
                    position: relative;
                    > ul {
                        > li {
                            list-style: none;
                            .userimg{
                                > img{
                                    float: left;
                                    height: 40px;
                                }
                            }
                            .con{
                                .name{
                                    position: absolute;
                                    right: 0;
                                    .username{
                                        float: left;
                                    }
                                    .time{
                                        float: right;
                                    }
                                }
                                .content{
                                    padding: 40px;
                                }
                            }
                        }
                    }
                }
            }
        }
    }

// 底部样式
    #footer{
        p{
            margin: 0;
            width: 100%;
            text-align: center;
            font-size: 12px;
            > a {
                color: #f10215;
            }
        }
    }
