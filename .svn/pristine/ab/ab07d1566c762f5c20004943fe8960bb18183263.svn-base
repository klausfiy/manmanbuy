@main-color: #ff841d;
* {
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
}

input {
    outline: none;
    border: 0;
}

a:hover {
    text-decoration: none;
}

li {
    list-style: none;
    position: relative;
}

// body,html {
//     height: 100%;
// }
#header {
    height: 44px;
    background-color: #fe4a65;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 999;
    .main-logo {
        position: absolute;
        left: 10px;
        height: 44px;
        line-height: 44px;
        color: #fff;
        font-weight: bold;
        font-size: 16px;
    }
    .search {
        width: 100%;
        height: 28px;
        line-height: 28px;
        margin-top: 7px;
        margin-right: 30px;
        margin-left: 64px;
        form {
            >input {
                height: 26px;
                line-height: 26px;
                border-radius: 5px;
                font-size: 12px;
                padding-left: 10px;
                color: #666;
            }
        }
    }
    
    .main-cat {
        position: absolute;
        right: 10px;
        height: 44px;
        line-height: 44px;
        >i {
            color: #fff;
        }
    }
}


#main {
    margin-top:44px;
    margin-bottom: 96px;
    height: 100%;
    #slide {
        height: 267.44px;
        width: 100%;
        img {
            width: 100%;
        }
        >.swiper-pagination {
            >span {
                background-color: #fff;
            }
        }
    }


    #nav {
        >.baicaijiaTitle {
            overflow: hidden;
            width: 100%;
            >ul {
                border-bottom: 1px solid #ccc;
                height: 35px;
                line-height: 35px;
                width: 640/6*13px;
                margin-bottom: 0;
                >li {
                    width: 640/6px;
                    text-align: center;
                    border-right: 1px solid #ccc;
                    &:last-child {
                        border-right: none;
                    }
                    &.active {
                        >a {
                            color: red;
                        } 
                    }
                    >a {
                        color: #666;
                    }
                }
            }
        }
    }
}


#footer {
    z-index: 999;
    position: relative;
    bottom: 0;
    left: 0;
    background-color: #efefef;
    color: #666;
    width: 100%;
    >.container {
        >.row {
            border-top: 1px solid #c4c4c4;
            border-bottom: 1px solid #c4c4c4;
            >div {
                height: 36px;
                text-align: center;
                line-height: 36px;
                border-right: 1px solid #c4c4c4;
            }
        }
    }
    >.website {
        font-size: 12px;
        text-align: center;
        line-height: 14px;
        padding: 15px 0;
        height: 60px;

        >p {
            >.phone {
                color: #666;
            }
            >.phone-app {
                color: red;
            }
        }
    }
}