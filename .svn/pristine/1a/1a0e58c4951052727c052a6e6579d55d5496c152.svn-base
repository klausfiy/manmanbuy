
@main-color:#f18622;

* {
    margin: 0px;
    padding: 0px;
    /* 在移动端不允许出现横向滚动条的不能让padding或者border撑大盒子 */
    box-sizing: border-box;
    /*  清除移动端点击（按住）高亮颜色 */
    -webkit-tap-highlight-color: transparent;
}
html,body{
    width: 100%;
}

a{
    text-decoration: none;
    color:#666;
}
i{
    font-style: normal;
}
.clearfix:after{
    content: "";
    display: block;
    clear: both;
    height: 0;
}
.clearfix{
    zoom: 1;
}
.bb{
    border-bottom: 1px solid #ccc;
}

#header{
    padding: 10px 10px 10px 20px ;
    background-color: @main-color;
    width: 100%;
    .logo-left {
        display: block;
        margin-top: 5px;
        height: 25px;
        float: left;
        > img{
            height: 100%;
        }
    }
    .onload-app-right{
        display: block;        
        height: 35px;
        float: right;
        > img{
            height: 100%;
        }
    }
}

#nav{
    .search{
        position: relative;
    padding: 10px;
    .bb;
    > input{
        background-color: #eee;
        height: 30px;
        width: 280px;
        border-radius: 15px;
        border: none;
        text-indent: 20px;
    }
    > button{
        background-color: @main-color;
        height: 30px;
        width: 60px;
        position: absolute;
        left: 250px;
        color: #fff;
        border: none;
        border-radius: 15px;
    }
  }
  .nav-categroy{
      padding: 15px;
      height: 240px;
      overflow: hidden;
      .row{
          >div{
               padding: 15px 10px;
               text-align: center;
              >a {
                  width: 100%;
                  display: block;
                   > img{
                        width: 100%;
                   }
                   > i {
                        width: 100%;
                        font-size: 10px;
                        font-style: normal;
                   }
              }
          }
      }
  }   
}
#discount{
    .banner{
        padding: 0 10px;
        background-color: rgba(224, 137, 37, 0.877);
        height: 35px;
        line-height: 35px;
        font-size: 20px;
        color: #fff;
        img{
            float: right;
            margin-top: 5px;
        }
    }
    .product-list{
        padding:  10px;
        .media{
            .media-left{
                > a{
                    img {
                        height: 100px;
                        width: 100px;
                        padding: 10px;
                    }
                }
            }
        }
        .media-body{
            >　p {
                > i {
                    color: rgba(224, 137, 37, 0.877);
                }
            }
            > .product-from{
                font-size: 10px;
            }
            > .count-sum{
                float: right;
                height: 14px;
                line-height: 14px;
                font-size: 10px;
                &::before{
                    vertical-align: baseline;
                }
            }
        }
    }
}
#moreInfo{
    padding: 10px;
    width: 100%;
    height: 60px;
    > a{
    display: block;
    width: 100%;
    height: 100%;
    background-color: #eee;
    text-align: center;
    line-height: 40px;
    font-size: 16px;
    color: #000;
    border: 1px solid #eee; 
    border-radius: 4px;   
    }
}
.brand-ranking{
    padding: 0px 10px;
    background-color: rgba(224, 137, 37, 0.877);
    color: #fff;
    font-size: 18px;
    height: 35px;
    line-height: 35px;
    > img {
        margin-top: 7px;
        float: right;
    }    
}
#button-nav{
    margin-top: 30px;
    margin-bottom: 20px;
    width: 100%;
    .row{
        text-align: center;
        height: 30px;
        display: block;
        box-sizing: border-box;
        > a{
            box-sizing: border-box;
            border: 1px solid #ccc;        
            height: 100%;
            text-align: center;
            line-height: 30px;
            vertical-align: middle;
            &:last-child{
                top: 0;
            }
        }
    }
}

#footer{
    p{
        margin: 0;
        width: 100%;
        text-align: center;
        font-size: 12px;
        > a {
            color: #f10215;
        }
    }
}

